<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="10dp">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="50dp" android:id="@+id/layoutApplicationAbout">
		<ImageView android:id="@+id/imageApplication"
			android:layout_width="48dp" android:layout_height="48dp"
			android:layout_marginRight="10dp" android:src="@drawable/icon" />
		<TextView android:id="@+id/titleApplication"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:textColor="#FFF" />
	</LinearLayout>
	<TextView android:id="@+id/creditsApplication"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:textColor="#FFFFFF" text="Msg di test"></TextView>
</LinearLayout>