<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:pax="http://schemas.android.com/apk/res/com.searchcast"
	android:orientation="vertical" android:background="@android:color/white"
	android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/mainBrowserLayout">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:background="#E6E6E6"
		android:layout_width="fill_parent" android:layout_height="35dp">
		<ImageButton android:layout_width="40dp"
			android:id="@+id/browse_previous_btn" android:layout_height="fill_parent" android:enabled="false"
			android:src="@drawable/go_previous_selector" android:background="@android:color/transparent" />
		<ImageButton android:layout_width="40dp" android:id="@+id/browse_next_btn" android:enabled="false"
			android:layout_height="fill_parent" android:src="@drawable/go_next_selector"
			android:background="@android:color/transparent" />
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_weight="1"
			 android:gravity="center" />
		<ImageButton android:layout_width="40dp" android:id="@+id/browse_share_btn"
			android:layout_height="fill_parent" android:src="@drawable/share_selector"
			android:background="@android:color/transparent" />
		<ImageButton android:layout_width="40dp"
			android:id="@+id/browse_internet_btn" android:layout_height="fill_parent"
			android:src="@drawable/go_internet_selector" android:background="@android:color/transparent" />
	</LinearLayout>
	<!--  <WebView 
        android:id="@+id/browse_webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:layout_weight="1" 
    />-->

</LinearLayout>
